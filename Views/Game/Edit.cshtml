@using virtualReality.Entities
@model virtualReality.ViewModels.GamesVM.EditGamesVM

@{
    this.ViewData["title"] = "Edit a game";
    this.Layout = "/Views/Shared/_Site.cshtml";
}

<div class="col-lg-8" style="margin: 120px auto;">
    <form action="/Game/Edit?id=@Model.Id" method="post" id="contact">
        <div class="row">
            <div class="label" for="name">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="input" id="username" name="name" required="required">
                @Html.TextBoxFor(m => m.Name)
            </div>
        </div>
        <div class="row">
            <div class="label" for="genre">@Html.LabelFor(m => m.Genres)</div>
            <div class="input" id="genre" name="genre" required="required">
            @foreach (var genre in Model.Genres)
            {
                <div class="genreContainer" id="genres" name="SelectedGenreIds" required="required">
                    @Html.Label(genre.Name)
                    @Html.CheckBox("SelectedGenreIds", isChecked: Model.SelectedGenreIds.Contains(genre.Id), new {  @value = genre.Id })
                </div>
            }
            </div>
        </div>
        <div class="row">
            <div class="label" for="Manufacturer" id="labelTel">@Html.LabelFor(m => m.Manufacturer)</div>
            <div class="input" id="phone" name="manufacturer" required="required">
                @Html.TextBoxFor(m => m.Manufacturer)
            </div>

        </div>
        <div class="row">
            <div class="label" for="Price" id="labelEmail">@Html.LabelFor(m => m.Price)</div> <br>
            <div class="input" id="em" name="price" required="required">
                <input type="number" name="price" min="0" oninput="validity.valid||(value='');">
            </div>

        </div>
        <div class="row">
            <div class="label" for="ReleaseDate" id="labelEmail">@Html.LabelFor(m => m.ReleaseDate)</div> <br>
            <div class="input" id="em" name="releseDate" required="required">
                @Html.TextBoxFor(model => model.ReleaseDate, new { @type="date", @class = "form-control datepicker" } )
            </div>

        </div>
        <div class="col-lg-8">
            <div>
                <button action="Edit" asp-for="Edit" class="btn col-lg-6" type="submit" value="Save" href="/Game/AllGames" style="background:rgba(125,90,254,1)  25%;">Edit</button>
            </div>
        </div>
    </form>
</div>