@using virtualReality.Entities
@model virtualReality.ViewModels.GamesVM.AllGamesVM

@{
    Layout = "/Views/Shared/_Site.cshtml";
    ViewData["title"] = "All Games";
}

<div class="item-details-page">
    <div class="container">  
            <div class="col-lg-12">
                <div class="current-bid mt-0">
                    <div class="gameActions">
                        <a class="btn" style="color: #8c52f1; border-color: #8c52f1; margin:20px;" href="/Game/Create">Add Games</a>
                    </div>
                    <div class="row">
                        @foreach (var game in Model.Games)
                        {
                            <div class="col-lg-6 col-md-6">
                                <div class="item">
                                    <div class="left-img">
                                        <img src="@game.Url" alt="Placeholder for: @game.Name">
                                    </div>
                                    <div class="right-content">
                                        <h4>@game.Name</h4>
                                        <h6>@game.Manufacturer</h6>
                                        <div class="line-dec"></div>
                                        <h6>
                                            Price:
                                            <em>@game.Price BGN</em>
                                        </h6>
                                        <span class="date">@game.ReleaseDate.ToString("dd/MM/yyyy")</span>
                                        <div class="gameActions">
                                            <a class="btn btn-warning actionButton" href="/Game/Edit?id=@game.Id">Edit</a>
                                            <a class="btn btn-danger actionButton" href="/Game/Delete?id=@game.Id">Delete</a>
                                            <a class="btn btn-success actionButton" href="/Order/AllOrders?id=@game.Id">Order</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

