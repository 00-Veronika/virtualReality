@model virtualReality.ViewModels.OrdersVM.OrdersVM

@{
    this.ViewData["title"] = "User Orders";
    this.Layout = "/Views/Shared/_Site.cshtml";
}

<h1>Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                OrderId
            </th>
            <th>
                GameId
            </th>
            <th>
                UserId
            </th>
        </tr>
    </thead>
    <tbody>
        @{int i = 0;}
        @foreach (var order in Model.Orders)
        {
            i++;
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @order.Id
                </td>
                <td>
                    @order.GameId
                </td>
                <td>
                    @order.UserId
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@order.UserId">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>