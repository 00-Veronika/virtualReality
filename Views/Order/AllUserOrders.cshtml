@model virtualReality.ViewModels.GamesVM.GamesVM

@{
    this.ViewData["title"] = "AllUserOrders";
    this.Layout = "/Views/Shared/_Site.cshtml";

}

<h1>Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Pictures
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserOrderedGames)
        {
            <tr>
                <td>
                    <img src="/Pictures/@item.url" style="width:100px ; height:100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order.Status)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.userId">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
