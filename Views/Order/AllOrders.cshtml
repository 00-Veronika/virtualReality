@model virtualReality.ViewModels.GamesVM.GamesVM

@{
    this.ViewData["title"] = "Orders";
    this.Layout = "/Views/Shared/_Site.cshtml";

}
<h1>Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Pictures
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderedGames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderedGames)
        {
        <tr>
            <td>
                <img src="/Images/@item.url" style="width:100px ; height:100px" />
            </td>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                <a asp-action="EditStatus" asp-route-id="@item.userId"> Edit Status </a>
            </td>
        </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    function formSubmited() {
        //Form post
        document.forms["ChangeStatus"].submit();
    }
</script>